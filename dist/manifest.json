{
    "manifest_version": 3,
    "name": "nkjTaskTool",
    "version": "1.3",
    "description": "for work",
    "icons": {
        "128": "icons/chick128x128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "sidePanel"
    ],
    "content_scripts": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}